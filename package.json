  "license": "MIT",
  "dependencies": {
    "async": "^2.6.1",
    "binary": "^0.3.0",
    "chalk": "2.4.1",
    "colorsys": "^1.0.22",
    "dgram": "^1.0.1",
    "lodash": "4.17.11",
    "mathjs": "^5.4.1",
    "opencv4nodejs": "4.14.0",
    "pi-spi": "^1.0.3",
    "simplex-noise": "^2.4.0",
    "sprintf-js": "^1.1.2",
    "yargs": "^13.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "eslint": "5.10.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "6.4.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "babel src -s -D -d dist",
    "dev": "nodemon --exec yarn run babel-node -- src/main.js",
    "dev-client": "nodemon --exec yarn run babel-node -- src/client.js",
    "dev-opencv": "nodemon --exec yarn run babel-node -- src/opencv.js",
    "start": "node dist/main.js",
    "test": "jest --watch --coverage",
    "test-ci": "jest --ci --coverage"
  }
